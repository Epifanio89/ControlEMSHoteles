{% extends 'Catalogos/catalogo.twig' %}

{% block title 'Registro de Reservaciones' %}

{% block tabla %}
    <table id="table" class="table table-bordered table-condensed table-hover">
        <thead>
        <tr>
            <th>Folio</th>
            <th>Fecha</th>
            <th>Habitaci√≥n</th>
            <th>Importe</th>
            <th>Descipcion/Nota</th>
            <th></th>
        </tr>
        </thead>
        <tbody id="table-content">
        <!-- Contenido de la tabla -->
        {% for d in reservaciones %}
            <tr>
                <td>{{ d.Folio }}</td>
                <td>{{ d.Fecha }}</td>
                <td class="text-center">{{ d.NumHabitacion }}</td>
                <td class="text-right">{{ d.Importe }}</td>
                <td>{{ d.Descripcion }}</td>
                <td class="text-right">
                    <button type="button" class="btn btn-xs btn-primary" data-toggle="modal" data-target="#operationModal" data-id="{{ d.IdReservacion }}" data-model="{{ modelo }}" data-operation="Editar">
                        <i class="fa fa-edit"></i> Editar
                    </button>
                    <button type="button" class="btn btn-xs btn-danger" data-toggle="modal" data-target="#operationModal" data-id="{{ d.IdReservacion }}" data-model="{{ modelo }}" data-operation="Eliminar">
                        <i class="fa fa-trash"></i> Eliminar
                    </button>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
