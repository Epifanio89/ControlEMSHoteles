{% extends 'Catalogos/catalogo.twig' %}

{% block title 'Hoteles' %}

{% block tabla %}
    <table id="table" class="table table-bordered table-condensed table-hover">
        <thead>
        <tr>
            <th>Codigo</th>
            <th>Nombre</th>
            <th>RFC</th>
            <th></th>
        </tr>
        </thead>
        <tbody id="table-content">
        <!-- Contenido de la tabla -->
        {% for d in hoteles %}
            <tr>
                <td>{{ d.Codigo }}</td>
                <td>{{ d.Nombre }}</td>
                <td class="text-center">{{ d.RFC }}</td>
                <td class="text-right">
                <div class="btn-group btn-group-toggle" data-toggle="buttons">
                  <button type="button" class="btn btn-sm btn-primary" id="option1" data-toggle="modal" data-target="#operationModal" data-id="{{ d.IdHotel }}" data-model="{{ modelo }}" data-operation="Editar">
                      <i class="fa fa-edit"></i>
                  </button>
                  <button type="button" class="btn btn-sm btn-danger" id="option2" data-toggle="modal" data-target="#operationModal" data-id="{{ d.IdHotel }}" data-model="{{ modelo }}" data-operation="Eliminar">
                      <i class="fa fa-trash"></i>
                  </button>
                </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
