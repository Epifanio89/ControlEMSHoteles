{% extends 'Catalogos/catalogo.twig' %}

{% block title 'Asignar Hotel a Usuario' %}

{% block tabla %}
    <table class="table table-bordered table-condensed table-hover">
        <thead class="thead-dark">
        <tr>
            <th>Usuario</th>
            <th>Nombre Usuario</th>
            <th>Hotel</th>
            <th> </th>
        </tr>
        </thead>
        <tbody id="table-content">
        <!-- Contenido de la tabla -->
        {% for d in UsuarioHotel %}
            <tr>
                <td>{{ d.Usuario }}</td>
                <td>{{ d.NombreUsuario }}</td>
                <td>{{ d.Hotel }}</td>
                <td class="text-right">
                    <button type="button" class="btn btn-xs btn-primary" data-toggle="modal" data-target="#operationModal" data-id="{{ d.IdUsuarioHotel }}" data-model="{{ modelo }}" data-operation="Editar">
                        <i class="fa fa-edit"></i> Editar
                    </button>
                    <button type="button" class="btn btn-xs btn-danger" data-toggle="modal" data-target="#operationModal" data-id="{{ d.IdUsuarioHotel }}" data-model="{{ modelo }}" data-operation="Eliminar">
                        <i class="fa fa-trash"></i> Eliminar
                    </button>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
