{% extends 'template/temp.twig' %}

{% block title 'Inicio' %}

{% block body %}
<div class="row col-md-11">
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item active">
        <img src="{{ resource('img/slider/sl1.jpg') }}" alt="REAL DE BOCA" style="width:100%;">
        <div class="carousel-caption">
            <h3>Hotel Real de Boca</h3>
        </div>
      </div>
      <div class="item">
        <img src="{{ resource('img/slider/sl2.jpg') }}" alt="ACUARIO" style="width:100%;">
        <div class="carousel-caption">
            <h3>Hotel Acuario - Catemaco</h3>
        </div>
      </div>
      <div class="item">
        <img src="{{ resource('img/slider/sl3.jpg') }}" alt="REGISTRO DE RECEPCIONES" style="width:100%;">
        <div class="carousel-caption">
            <h3>Registro de Recepciones</h3>
        </div>
      </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>


{% endblock %}